{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    ".storybook/main.ts",
    ".storybook/preview.ts",
    "vite.config.ts",
    "setupTests.ts",
    "vitest.config.ts",
    "rollup.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.stories.ts",
    "*.stories.tsx",
    "*.test.ts",
    "*.test.tsx"
  ]
}
